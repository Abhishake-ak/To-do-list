<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1>Hello today , is <%= day %></h1>
    </div>
 
    <div class="box">

        <% for(var i=0; i<data.length ; i++) { %>
            <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= data[i]._id %>" onchange="this.form.submit()" >
                <p>

                    <%= data[i].todo %>
                </p>
            </div>
        </form>
                 
        <% } %>
        
        
        <form action="/" method="POST">
            <input type="text" name="to" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
        
    </div>
</body>
</html>